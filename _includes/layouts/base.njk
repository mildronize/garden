<!doctype html>
<html lang="{{ metadata.language }}" id="root-app">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta
    name="description" content="{{ description or metadata.description }}">
    {# Emmedded CSS for prevent layout shifting, this should not be too large size #}
    <style>
      {% include "public/css/embbed.css" %}</style>
  </head>
  <body>
    <div class="container">
      <aside class="sidebar">
        <div class="logo">ðŸŒ³ Suan</div>
        <input type="text" class="search-bar" placeholder="Search">
        <nav class="explorer">
          <h3>Explorer</h3>
          <ul>
            <li>Advanced</li>
            <li>Feature List</li>
            <li>Plugins</li>
            <li>Authoring Content</li>
            <li>Building your Quartz</li>
            <li>Configuration</li>
          </ul>
        </nav>
      </aside>
      <div class="main-container">
        <div class="center-panel">
          <main class="content">
            {{ content | safe }}
          </main>
          <hr>
          <div class="center-footer">
            {% include "_includes/layouts/footer.njk" %}
          </div>
        </div>
        <aside class="right-panel">
          <div class="table-of-contents">
            <h3>Table of Contents</h3>
            <ul>
              <li>Get Started</li>
              <li>Features</li>
              <li>Troubleshooting + Updating</li>
            </ul>
          </div>
          <div class="right-footer">
            {% include "_includes/layouts/footer.njk" %}
          </div>
        </aside>
      </div>
    </div>
  </body>
  <script type="module" crossorigin src="/js/main.js"></script>
</html>